# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=decrown_transport
DB_USER=postgres
DB_PASSWORD=your_password
DB_SSL=false

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Payment Provider Configuration
PAYMENT_PROVIDER=mock
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
PAYMONGO_SECRET_KEY=sk_test_your_paymongo_secret_key
PAYMONGO_WEBHOOK_SECRET=your_paymongo_webhook_secret

# Billing Configuration
BASE_FARE_PER_RIDE=50.00
DISTANCE_FEE_PER_KM=15.00
TIME_FEE_PER_MINUTE=2.00
CURRENCY=PHP
PAYMENT_RETRY_ATTEMPTS=3
DUNNING_NOTICE_DAYS=3,7,14
SUSPENSION_GRACE_DAYS=30

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-change-this

# Location Services
LOCATION_RETENTION_DAYS=30
LOCATION_CLEANUP_INTERVAL=24h
MAX_LOCATION_ACCURACY=100

# WebSocket Configuration
WS_PORT=3001
WS_HEARTBEAT_INTERVAL=30000

# Testing
TEST_DB_NAME=decrown_transport_test
DRY_RUN_MODE=false